version: '3.9'

services:
  watchtower:
    image: containrrr/watchtower
    container_name: watchtower
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
    # --cleanup: lÃ¶scht alte Images nach Update
    # --interval: Zeit in Sekunden zwischen Checks
    command: --cleanup --interval 604800
    restart: unless-stopped
